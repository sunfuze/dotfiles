[alias]
    st = status -s
    ci = commit
    l = log --oneline --decorate -12 --color
    ll = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%an, %cr)' --abbrev-commit
    lc = log --graph --color
    co = checkout
    br = branch
    rb = rebase
    sbi = submodule init
    sbu = submodule update
    sbp = submodule foreach git pull
    sbc = submodule foreach co master
[credential]
	helper = store
[core]
	autocrlf = input
	excludesfile = $HOME/.gitignore
	ignorecase = false
[push]
	default = matching
[pull]
	rebase = true
[color]
	ui = auto
[merge]
	conflictstyle = diff3
[http]
	cookiefile = $HOME/.gitcookies
