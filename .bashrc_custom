# enable git branch tag
git-branch-name() {
    git symbolic-ref HEAD 2>/dev/null | cut -d"/" -f 3
}
git-branch-prompt() {
    local branch=`git-branch-name`
    if [ "$branch" != "" ]; then
	printf "[\033[1;33m${branch}\033[0m]"
    fi
}
CNONE="\[\033[0m\]"
CG="\[\033[0;32m\]"
CC="\[\033[0;36m\]"
CBR="\[\033[1;41m\]"
UC=$CNONE
UP="\$"
if [ $UID -eq "0" ] ; then
    UC=$CBR 
    UP="#"
fi
u="${UC}${debian_chroot:+($debian_chroot)}\u${CNONE}"
h="${CC}\h${CNONE}:${CG}\w${CNONE}"
export PS1="$u@$h\$(git-branch-prompt)${UP} ${CNONE}"

